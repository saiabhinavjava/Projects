<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/my_bg_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PatientModule.PatientAppoitnment.PatientViewAppointmentActivity"
    tools:showIn="@layout/activity_patient_view_appointment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageDetail"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_send" />

            <TextView
                android:id="@+id/patientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:text="Patient Name"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/appointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameDetail"
                android:text="Appointment Date"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                />



            <TextView
                android:id="@+id/appSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"

                android:text="Subject"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/appNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameDetail"
                android:text="Notes"
                android:layout_marginTop="10dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/appFileUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameDetail"
                android:text="Download File"
                android:layout_marginTop="10dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/callBtn"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Join Session" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>