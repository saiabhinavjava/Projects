<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/bootstrap_gray_dark"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bootstrap_gray_dark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageList"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_appointment" />

        <LinearLayout
            android:id="@+id/appStatusBar"
            android:layout_width="3dp"

            android:layout_height="match_parent"
            android:background="@color/bootstrap_brand_danger"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/appId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App id"
                    android:textColor="@color/bootstrap_brand_warning"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:textSize="18sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Doctor: "
                    android:textColor="@color/bootstrap_brand_info"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/appListDName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Doctor Name"
                    android:gravity="left"


                    android:textColor="@color/bootstrap_brand_warning"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Patient: "
                    android:textColor="@color/bootstrap_brand_info"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/appListPName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Doctor Name"
                    android:textColor="@color/bootstrap_brand_warning"
                    android:textStyle="italic"
                    android:gravity="left"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Subject: "
                    android:textColor="@color/bootstrap_brand_info"
                    android:textStyle="italic"
                    />

            <TextView
                android:id="@+id/appListSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_weight="0.3"

                android:text="Subject"
                android:gravity="left"

                android:textColor="@color/bootstrap_brand_warning"
                android:textStyle="italic"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Date: "
                    android:textColor="@color/bootstrap_brand_info"
                    android:textStyle="italic"
                    />
            <TextView
                android:id="@+id/appListDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"

                android:text="Date"
                android:textColor="@color/bootstrap_brand_warning"
                android:textStyle="italic"
                android:gravity="left"
                />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>